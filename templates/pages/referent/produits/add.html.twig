	<h1 class="text-center">Espace référent</h1>
	<section id="produit-accueil">
		<h2 class="text-center">Ajouter un produit</h2>
		<div class="row justify-content-center">
			<div class="col-md-6">
				<video width="640" height="360" controls>
					<source src="{{asset('images/videos/referent/produit/ajouter.mp4')}}" type="video/mp4">
